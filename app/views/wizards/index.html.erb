<p id="notice"><%= notice %></p>

<h1>Listing Wizards</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Color</th>
      <th>Height</th>
      <th>Is good</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wizards.each do |wizard| %>
      <tr>
        <td><%= wizard.name %></td>
        <td><%= wizard.color %></td>
        <td><%= wizard.height %></td>
        <td><%= wizard.is_good %></td>
        <td><%= link_to 'Show', wizard %></td>
        <td><%= link_to 'Edit', edit_wizard_path(wizard) %></td>
        <td><%= link_to 'Destroy', wizard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

